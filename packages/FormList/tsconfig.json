{
  "extends": ["./../../tsconfig.build.json"],
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "allowUnusedLabels": true,

    "jsx": "preserve",
    "types": ["@types/react", "@types/react-dom", "@types/node"],
    "paths": {
      "@src/*": ["./src/*"]
    },
    "outDir": "./dist/types",
    "declaration": true,
    "noEmit": true
  },
  "include": ["./src/*"],
  "exclude": ["src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
